{
    // General configuration
    "telemetry.telemetryLevel": "off",
    "window.title": "${rootName}${separator}${activeEditorMedium}$",
    "breadcrumbs.enabled": false,
    "terminal.integrated.fontFamily": "MesloLGS Nerd Font Mono",
    "editor.fontFamily": "JetBrainsMono NF",
    "editor.fontSize": 14,
    "editor.fontLigatures": "enable",
    "editor.rulers": [
        80, 120
    ],
    "editor.minimap.showSlider": "always",
    "editor.detectIndentation": false,
    "editor.insertSpaces": true,
    "editor.tabSize": 4,
    "editor.suggestSelection": "first",
    "editor.inlineSuggest.enabled": true,
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.lineNumbers": "on",
    "editor.wordWrap": "off",
    "editor.minimap.renderCharacters": false,
    "editor.linkedEditing": true,
    "editor.lineNumbers": "on",
    "editor.wordWrap": "off",
    "editor.acceptSuggestionOnEnter": "off",
    "explorer.confirmDragAndDrop": false,
    "git.openRepositoryInParentFolders": "never",

    "workbench.startupEditor": "none",
    // "workbench.colorTheme": "Github Light Theme",
    "workbench.colorTheme": "One Dark Pro",
    "workbench.iconTheme": "material-icon-theme",


    // https://www.roboleary.net/vscode/2020/08/05/dont-need-extensions.html
    "files.trimFinalNewlines": true,
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    "html.autoClosingTags": true,
    "javascript.autoClosingTags": true,
    "typescript.autoClosingTags": true,
    "[markdown]": {
        "editor.formatOnSave": true,
        "editor.formatOnPaste": true,
        "files.trimTrailingWhitespace": false,
        "editor.codeActionsOnSave": {
            "source.fixAll.markdownlint": "explicit"
        },
    },
    "[yaml]": {
        "editor.tabSize": 2,
    },
    "[makefile]": {
        "editor.insertSpaces": false,
        "editor.detectIndentation": false
    },
    "python.defaultInterpreterPath": "/Users/edjg/.asdf/shims/python3",
    "python.analysis.typeCheckingMode": "strict",
    "python.analysis.autoImportCompletions": true,
    "python.analysis.fixAll": ["source.unusedImports"],
    "python.analysis.autoFormatStrings": true,
    "editor.defaultFormatter": "charliermarsh.ruff",
    "files.exclude": {
        "**/__pycache__": true,
        "**/.cache": true,
        "**/.coverage": true,
        "**/.coverage.*": true,
        "**/.hypothesis": true,
        "**/.mypy_cache": true,
        "**/.nox": true,
        "**/.pytest_cache": true,
        "**/.ruff_cache": true,
        "**/.tox": true
    },
    "python.testing.pytestEnabled": true,
    "python.testing.pytestArgs": [
        "tests"
    ],


    // Extension configuration
    "makefile.configureAfterCommand": false,
    "makefile.configureOnEdit": false,
    "makefile.configureOnOpen": false,
    "makefile.buildBeforeLaunch": false,
    "makefile.clearOutputBeforeBuild": false,
    "autoDocstring.docstringFormat": "google",
    "autoDocstring.generateDocstringOnEnter": true,
    "autoDocstring.guessTypes": false,
    "vim.vimrc.enable": true,
    "vim.startInInsertMode": true,
}

